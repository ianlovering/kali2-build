# search path for the c32 support libraries (libcom32, libutil etc.)
path debian-installer/amd64/boot-screens/

label localboot
        menu label ^Local Boot
        menu default
        localboot type 0

label restore_native
        menu label ^Restore to Native
        kernel live/vmlinuz
        append initrd=live/initrd.img boot=live components noautologin fetch=http://192.168.148.51/live/filesystem.squashfs hooks=http://192.168.148.51/scripts/restore_bootstrap.sh restoretype=laptop

label restore_vm
        menu label ^Restore to Virtual
        kernel live/vmlinuz
        append initrd=live/initrd.img boot=live components noautologin fetch=http://192.168.148.51/live/filesystem.squashfs hooks=http://192.168.148.51/scripts/restore_bootstrap.sh restoretype=vmware

default debian-installer/amd64/boot-screens/vesamenu.c32
prompt 0
timeout 0

